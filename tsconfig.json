{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "react-jsx",
    "allowJs": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "lib": ["ES2021", "DOM", "DOM.Iterable"],
    "types": ["dom-screen-wake-lock", "@webgpu/types"],
    "noEmit": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
